library reflextra
  import: basic-deps
  hs-source-dirs:     reflextra
  exposed-modules:    Reflex.SDL2.Layers
                    , Reflex.SDL2.Keys
                    , Reflex.SDL2.Text

executable moving-block
  import: basic-deps
  main-is:             MovingBlock.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       coercible-utils ^>= 0.0
                     , fixed-timestep ^>= 0.2.0.1
                     , reflextra
  hs-source-dirs:      moving-block

executable pong
  import: basic-deps
  main-is:             Pong.hs
  build-depends:       coercible-utils ^>= 0.0
                     , random ^>= 1.1
                     , reflextra
  hs-source-dirs:      pong
