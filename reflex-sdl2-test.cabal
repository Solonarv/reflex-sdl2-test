common basic-deps
  build-depends:       base ^>=4.12.0.0
                     , lens ^>=4.17
                     , reflex ^>= 0.5
                     , reflex-sdl2 ^>= 0.3
                     , sdl2-ttf ^>= 2.1
                     , text
